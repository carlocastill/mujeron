<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_order_form_inherit" model="ir.ui.view">
            <field name="name">sale.order.inherit</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <field name="date_order" position="after">
                    <field name="sale_type_id" options="{'no_create': True, 'no_open': True}" groups="stock_extended.market_place_group_manager"/>
                    <field name="partner_single_ok" groups="stock_extended.market_place_group_manager"/>
                </field>
                
                <xpath expr="//page/field[@name='order_line']/tree/field[@name='qty_delivered']" position="after">
                    <field name="partner_single_ok" invisible="1"/>
                    <field name="service_order"/>
                    <field name="order_final_single_partner" attrs="{'invisible': [('partner_single_ok', '=', True)]}" groups="stock_extended.market_place_group_manager"/>
                    <field name="order_final_partner_id" attrs="{'invisible': [('partner_single_ok', '=', False)]}" groups="stock_extended.market_place_group_manager"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
